---
import Header from "@/components/Header.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout title="photo | nabe's gallery">
  <div class="root-container">
    <Header current="/photo" />
    <div class="contents-container">
      <div class="gallery">
        <div><h2><a href="/photo/gallery-1">『2024年』</a></h2></div>
        <div>2024年撮影のお気に入りの写真集</div>
      </div>
      <div class="gallery">
        <h2><a href="/photo/gallery-2">『2023年』</a></h2>
        <div>2023年撮影のお気に入りの写真集</div>
      </div>
    </div>
  </div>

  <style lang="scss">
    .root-container {
      padding-top: 20px;
      padding-right: 40px;
      padding-bottom: 20px;
      padding-left: 40px;

      @media screen and (max-width: 767px) {
        padding-right: 20px;
        padding-left: 20px;
      }

      .contents-container {
        margin-top: 40px;
        margin-bottom: 40px;

        display: flex;
        flex-direction: column;
        row-gap: 40px;

        .gallery {
          border-radius: 8px;
          padding: 40px;
          background-color: #2b2b2b;

          display: flex;
          flex-direction: column;
          row-gap: 16px;

          a {
            text-decoration: none;
          }

          @media screen and (max-width: 767px) {
            padding-right: 20px;
            padding-left: 20px;
          }
        }
      }
    }
  </style>
</BaseLayout>
