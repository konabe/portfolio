---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import { Image } from 'astro:assets';
import coverImage from "../assets/cover.jpg"
---

<Layout title="nabe's gallery">
  <div class="cover">
    <div class="cover--header">
      <Header />
    </div>
    <Image src={coverImage} alt="cover image" />
    <div class="cover--sentence">暗闇の中で光るものが一番輝いて見える。</div>
  </div>
</Layout>

<style lang="scss">
.cover {
  width: 100%;
  height: 100vh;

  position: relative;

  &--header {
    position: absolute;
    top: 20px;
    left: 40px;
  }

  &--sentence {
    font-size: 20px;
    line-height: 30px;
    position: absolute;
    text-align: right;

    width: 50%;
    right: 40px;
    bottom: 10%;
  }

  img {
    display: block;
    width: 100%;
    height: 100vh;
    object-fit: cover;
  }
}

</style>
